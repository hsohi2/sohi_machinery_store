<%= form_with(url: add_address_path) do |form| %>
<%= form.label :address, "Address: " %>
<%= form.text_field :address %>
<%= form.label :city, "City: " %>
<%= form.text_field :city %>
<% provinces_array = Province.all.map { |p| [p.province_name, p.id] } %>
<%= select_tag(:province, options_for_select(provinces_array)) %>
<%= form.submit %>
<% end %>