<% if user_signed_in? %>
  <h6 class="text-light">Signed in as: <%= current_user.email %></h6>
  <%= button_to "Sign out", destroy_user_session_path, :method => :delete, class: "btn btn-outline-light btn-sm m-auto p-2" %>
<% else %>
  <h6 class="text-light"><a class="nav-link" href="/users/sign_in">Sign In</a></h6>
<% end %>